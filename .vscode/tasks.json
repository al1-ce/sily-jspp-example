{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "/c/jspp/jsppext.exe",
            "args": [
                "src/",
                "-o",
                "js/"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                {
                    "owner": "js++",
                    "source": "js++",
                    "pattern": [
                        {
                            "file": 1,
                            "line": 2,
                            "column": 3,
                            "severity": 4,
                            "code": 5,
                            "message": 6,
                            "regexp": "(.*?)\\((\\d+)\\,(\\d+)\\)\\: (Error|Warning)\\[(.*?)\\]\\: (.*)"
                        }
                    ]
                }
            ],
            "presentation": {
                "reveal": "silent",
                "revealProblems": "onProblem",
                "focus": false,
                "showReuseMessage": true,
                "clear": false
            }
        },
        {
            "label": "build-file",
            "type": "shell",
            "command": "/c/jspp/jsppext.exe",
            "args": [
                "${command:extension.commandvariable.file.relativeFilePosix}",
                "-o",
                "js/",
                "-v"
            ],
            "group": {
                "kind": "build"
            },
            "problemMatcher": [
                {
                    "owner": "js++",
                    "source": "js++",
                    "pattern": [
                        {
                            "file": 1,
                            "line": 2,
                            "column": 3,
                            "severity": 4,
                            "code": 5,
                            "message": 6,
                            "regexp": "(.*?)\\((\\d+)\\,(\\d+)\\)\\: (Error|Warning)\\[(.*?)\\]\\: (.*)"
                        }
                    ]
                }
            ],
            "presentation": {
                "reveal": "silent",
                "revealProblems": "onProblem",
                "focus": false,
                "showReuseMessage": true,
                "clear": false
            }
        }
    ]
}